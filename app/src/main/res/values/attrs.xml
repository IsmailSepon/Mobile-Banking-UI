<resources>

    <declare-styleable name="HorizontalPicker">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="values" format="reference" />
        <attr name="android:ellipsize" />
        <attr name="android:marqueeRepeatLimit" />
        <attr name="dividerSize" format="dimension" />
        <attr name="sideItems" format="integer" />
    </declare-styleable>

    <attr name="horizontalPickerStyle" format="reference" />


    <declare-styleable name="FabBottomNavigationView">
        <attr name="fab_cradle_margin" format="dimension"/>
        <attr name="fab_cradle_rounded_corner_radius" format="dimension"/>
        <attr name="cradle_vertical_offset" format="dimension"/>
        <attr name="fab_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="multi_line_radio_group">
        <attr name="max_in_row" format="integer"/>
        <attr name="radio_buttons" format="reference"/>
        <attr name="default_button" format="string"/>
        <attr name="stepTrackerDotBackground" format="reference"/>
    </declare-styleable>


    <declare-styleable name="SlyCalendarView">
        <attr name="backgroundColor" format="color"/>
        <attr name="headerColor" format="color"/>
        <attr name="headerTextColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="selectedColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="firstMonday" format="boolean"/>
    </declare-styleable>


</resources>