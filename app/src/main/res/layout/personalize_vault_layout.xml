<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView307"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:padding="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_15sp"
        style="@style/medium_text_style"
        android:id="@+id/textView756"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Personalise your savings Vault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView756">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView507">


            <ImageView
                android:id="@+id/imageView300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/spare" />

            <TextView
                android:id="@+id/textView754"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Spare change"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView300"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView755"
                style="@style/text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:gravity="left"
                android:text="~à§³300.30 / week"
                android:textColor="@color/common_clr"
                android:textSize="@dimen/_13_3sp"
                app:layout_constraintEnd_toStartOf="@+id/riminder_switch"
                app:layout_constraintStart_toStartOf="@+id/textView754"
                app:layout_constraintTop_toBottomOf="@+id/textView754" />


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/riminder_switch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17dp"
                android:layout_marginEnd="32dp"
                android:checked="false"
                android:theme="@style/switcherTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="DuplicateIds"
            android:layout_marginTop="@dimen/_26dp"
            app:layout_constraintTop_toBottomOf="@+id/textView507">


            <ImageView
                android:id="@+id/imageView300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/paywell_white"/>

            <TextView
                android:id="@+id/textView754"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Recurring saving"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView300"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView755"
                style="@style/text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:gravity="left"
                android:text="Set aside an amount each month"
                android:textColor="@color/common_clr"
                android:textSize="@dimen/_13_3sp"
                app:layout_constraintEnd_toStartOf="@+id/riminder_switch"
                app:layout_constraintStart_toStartOf="@+id/textView754"
                app:layout_constraintTop_toBottomOf="@+id/textView754" />


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/riminder_switch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17dp"
                android:layout_marginEnd="32dp"
                android:checked="false"
                android:theme="@style/switcherTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="DuplicateIds"
            android:id="@+id/one_off_saving_lay"
            android:layout_marginTop="@dimen/_26dp"
            app:layout_constraintTop_toBottomOf="@+id/textView507">


            <ImageView
                android:id="@+id/imageView300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_ash_bg"/>

            <TextView
                android:id="@+id/textView754"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="@string/one_off_saving"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView300"
                app:layout_constraintTop_toTopOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>