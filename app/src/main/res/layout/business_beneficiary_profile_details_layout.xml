                app:layout_constraintStart_toStartOf="@+id/textView419"
                app:layout_constraintTop_toBottomOf="@+id/textView419" />


            <ImageView
                android:id="@+id/imageView171"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_7dp"
                android:layout_marginTop="20dp"
                android:background="@color/divider_bg"
                app:layout_constraintTop_toBottomOf="@+id/textView420" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView171">


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/beneficiary_profile_tab"
                    app:tabRippleColor="@color/keypad_text_clr"
                    app:tabSelectedTextColor="@color/keypad_text_clr"
                    app:tabTextAppearance="@style/CustomTextAppearanceTab"
                    android:layout_width="match_parent"
                    app:tabBackground="@drawable/tab_background"
                    app:tabIndicatorColor="@color/keypad_text_clr"
                    android:layout_height="wrap_content"/>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/beneficiar_profile_yview_pager"
                    android:layout_width="match_parent"
