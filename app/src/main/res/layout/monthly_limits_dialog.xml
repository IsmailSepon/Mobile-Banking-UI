        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout34"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_40dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView457"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="@dimen/_75dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"
                        android:textColor="@color/common_clr"
                        android:textSize="@dimen/twelve_sp" />

                    <Spinner
                        android:id="@+id/currency_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_26dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:background="@color/divider_bg"
                        tools:ignore="ContentDescription" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_style"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3dp"
                        android:text="@string/monthly_limit"
                        android:textColor="@color/common_clr"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/divider_bg"
                        android:ems="8"
                        android:paddingBottom="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:paddingTop="@dimen/_0dp"
                        android:paddingEnd="@dimen/_0dp"
                        android:paddingStart="@dimen/_0dp"
                        style="@style/edittext_style"
                        android:hint="500,000"
                        android:inputType="number"
                        android:textColorHint="#8ea0b6"
                        android:textSize="16sp"
                        tools:ignore="TextFields"
                        tools:targetApi="lollipop" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_17sp"
                style="@style/text_style"
                android:id="@+id/textView457"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="45dp"
                android:text="@string/monthly_limit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/set_monthly_limit_btn"
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_btn_visable"
                android:elevation="@dimen/evelation_five"
                android:text="@string/set_monthly_limit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/ac_created_btn"
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_round_blue"
                android:elevation="@dimen/evelation_five"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/keypad_text_clr"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/set_monthly_limit_btn"
                tools:targetApi="lollipop" />


        </androidx.constraintlayout.widget.ConstraintLayout>


<!--    </androidx.cardview.widget.CardView>-->

</androidx.cardview.widget.CardView>