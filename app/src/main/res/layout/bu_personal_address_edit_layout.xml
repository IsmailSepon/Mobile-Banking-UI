<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView197"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross_btn"
        tools:ignore="ContentDescription" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView197">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_40dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView487"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="@string/what_are_your_personal_details"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_14sp"
                style="@style/text_style"
                android:id="@+id/textView489"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_46dp"
                android:layout_marginTop="@dimen/_18dp"
                android:text="@string/permanent_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView487" />

            <ImageView
                android:id="@+id/imageView198"
                android:layout_width="@dimen/_160dp"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/common_clr"
                app:layout_constraintStart_toStartOf="@+id/textView489"
                app:layout_constraintTop_toBottomOf="@+id/textView489"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView198">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_14dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabeltwo">

                    <EditText

                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/house_holding_number"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/common_clr"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabeltwo">

                    <EditText
                        android:textColorHint="@color/common_clr"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/village_road"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />


                </com.google.android.material.textfield.TextInputLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/towncity_sp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/towncity_sp"
                        app:layout_constraintEnd_toEndOf="@+id/towncity_sp"
                        app:layout_constraintStart_toStartOf="@+id/towncity_sp"
                        app:layout_constraintTop_toTopOf="@+id/towncity_sp"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/upozila_sp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/upozila_sp"
                        app:layout_constraintEnd_toEndOf="@+id/upozila_sp"
                        app:layout_constraintStart_toStartOf="@+id/upozila_sp"
                        app:layout_constraintTop_toTopOf="@+id/upozila_sp"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/district_sp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/district_sp"
                        app:layout_constraintEnd_toEndOf="@+id/district_sp"
                        app:layout_constraintStart_toStartOf="@+id/district_sp"
                        app:layout_constraintTop_toTopOf="@+id/district_sp"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>




                <TextView
                    android:textColor="@color/keypad_text_clr"
                    android:textSize="@dimen/_14sp"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:text="@string/current_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView487" />

                <ImageView
                    android:layout_width="@dimen/_160dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="@dimen/_46dp"
                    android:background="@color/common_clr"
                    tools:ignore="ContentDescription" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="46dp"
                        android:button="@drawable/checkbox_ash_clr"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="@color/common_clr"
                        android:textSize="@dimen/_14sp"
                        style="@style/text_style"
                        android:id="@+id/textView490"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/same_as_permanent_address"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/checkBox2"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_14dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabeltwo">

                    <EditText
                        android:textColorHint="@color/common_clr"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/house_holding_number"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabeltwo">

                    <EditText
                        android:textColorHint="@color/common_clr"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/village_road"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />


                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/towncity_sp_current"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/towncity_sp_current"
                        app:layout_constraintEnd_toEndOf="@+id/towncity_sp_current"
                        app:layout_constraintStart_toStartOf="@+id/towncity_sp_current"
                        app:layout_constraintTop_toTopOf="@+id/towncity_sp_current"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/upozila_sp_current"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/upozila_sp_current"
                        app:layout_constraintEnd_toEndOf="@+id/upozila_sp_current"
                        app:layout_constraintStart_toStartOf="@+id/upozila_sp_current"
                        app:layout_constraintTop_toTopOf="@+id/upozila_sp_current"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:id="@+id/district_sp_current"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView348" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/district_sp_current"
                        app:layout_constraintEnd_toEndOf="@+id/district_sp_current"
                        app:layout_constraintStart_toStartOf="@+id/district_sp_current"
                        app:layout_constraintTop_toTopOf="@+id/district_sp_current"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <Button
                    android:id="@+id/address_done_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_hight"
                    android:elevation="@dimen/evelation_five"
                    android:background="@drawable/round_btn"
                    android:text="@string/continue_txt"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_marginBottom="@dimen/_40dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="lollipop" />

            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>