<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView197"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross_btn"
        tools:ignore="ContentDescription" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView197">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_40dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView487"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="@string/what_are_your_business_details"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sp"
                style="@style/text_style"
                android:id="@+id/textView496"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/please_be_precise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView487" />

            <ImageView
                android:id="@+id/imageView205"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView496"
                app:srcCompat="@drawable/logo_ic"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imageView205">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30dp">


                    <Spinner
                        android:id="@+id/counrty_sp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView497" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/counrty_sp"
                        app:layout_constraintEnd_toEndOf="@+id/counrty_sp"
                        app:layout_constraintStart_toStartOf="@+id/counrty_sp"
                        app:layout_constraintTop_toTopOf="@+id/counrty_sp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:textColor="@color/common_clr"
                        android:textSize="@dimen/_12sp"
                        style="@style/text_style"
                        android:id="@+id/textView497"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="46dp"
                        android:text="@string/country"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/personal_details_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabel">


                    <EditText
                        android:id="@+id/legal_first_name_et"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/legal_name_of_business_org"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">


                    <Spinner
                        android:id="@+id/plase_of_registration"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/plase_of_registration"
                        app:layout_constraintEnd_toEndOf="@+id/plase_of_registration"
                        app:layout_constraintStart_toStartOf="@+id/plase_of_registration"
                        app:layout_constraintTop_toTopOf="@+id/plase_of_registration"
                        tools:ignore="ContentDescription" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">


                    <Spinner
                        android:id="@+id/date_of_Registration"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/date_of_Registration"
                        app:layout_constraintEnd_toEndOf="@+id/date_of_Registration"
                        app:layout_constraintStart_toStartOf="@+id/date_of_Registration"
                        app:layout_constraintTop_toTopOf="@+id/date_of_Registration"
                        tools:ignore="ContentDescription" />


                </androidx.constraintlayout.widget.ConstraintLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabel">


                    <EditText
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/what_is_the_nature_of_your_business"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />

                </com.google.android.material.textfield.TextInputLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">


                    <Spinner
                        android:id="@+id/employe_cunt_sp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/employe_cunt_sp"
                        app:layout_constraintEnd_toEndOf="@+id/employe_cunt_sp"
                        app:layout_constraintStart_toStartOf="@+id/employe_cunt_sp"
                        app:layout_constraintTop_toTopOf="@+id/employe_cunt_sp"
                        tools:ignore="ContentDescription" />


                </androidx.constraintlayout.widget.ConstraintLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">


                    <Spinner
                        android:id="@+id/trx_value_limit"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/trx_value_limit"
                        app:layout_constraintEnd_toEndOf="@+id/trx_value_limit"
                        app:layout_constraintStart_toStartOf="@+id/trx_value_limit"
                        app:layout_constraintTop_toTopOf="@+id/trx_value_limit"
                        tools:ignore="ContentDescription" />


                </androidx.constraintlayout.widget.ConstraintLayout>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40dp">


                    <Spinner
                        android:id="@+id/monthly_trx_limit"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_46dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_46dp"
                        android:background="@drawable/spinner_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_0dp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <ImageView
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/common_clr"
                        app:layout_constraintBottom_toBottomOf="@+id/monthly_trx_limit"
                        app:layout_constraintEnd_toEndOf="@+id/monthly_trx_limit"
                        app:layout_constraintStart_toStartOf="@+id/monthly_trx_limit"
                        app:layout_constraintTop_toTopOf="@+id/monthly_trx_limit"
                        tools:ignore="ContentDescription" />


                </androidx.constraintlayout.widget.ConstraintLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:layout_marginEnd="@dimen/_46dp"
                    app:hintTextColor="@color/common_clr"
                    android:textColorHint="@color/common_clr"
                    app:hintTextAppearance="@style/TextLabel">


                    <EditText
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/company_website"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="@dimen/_15dp"
                        tools:ignore="TextFields" />

                </com.google.android.material.textfield.TextInputLayout>






                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_hight"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_50dp"
                    android:layout_marginBottom="@dimen/_40dp"
                    android:background="@drawable/round_btn"
                    android:elevation="@dimen/evelation_five"
                    android:text="@string/continue_txt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="lollipop" />




            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>