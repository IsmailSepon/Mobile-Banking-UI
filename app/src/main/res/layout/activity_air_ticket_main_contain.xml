<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutBookingList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_air"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btViewTricket"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableStart="@drawable/search"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btIssueTicket"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/icon_isssue"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/ticket_issue_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btViewTricket" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btCencel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/ic_cancel_all_summary"
            android:paddingLeft="20dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btIssueTicket" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btTicketVoid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/icon_void"
            android:paddingLeft="20dp"
            android:text="@string/ticket_void_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btCencel" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btTicketRefund"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/icon_refand"
            android:paddingLeft="20dp"
            android:text="@string/ticket_refund_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btTicketVoid" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btTicketReissue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/icon_re_issue"
            android:paddingLeft="20dp"
            android:text="@string/ticket_reissue_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btTicketRefund" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btTicketDocsInfoUpdateRequest"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/air_ticket_round_button_v1"
            android:drawableLeft="@drawable/dos_update_info"
            android:paddingLeft="20dp"
            android:text="@string/ticket_docs_update_info_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btTicketReissue" />

        <Button
            android:gravity="start|center"
            android:drawablePadding="12dp"
            android:id="@+id/btTransationLog"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/serach_roundedbutton_smiliar_blue_new_v1"
            android:drawableLeft="@drawable/transiton_log"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/transaction_log"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btTicketDocsInfoUpdateRequest" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
