<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/popup"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrow_up2"
        android:layout_width="@dimen/_70_5dp"
        android:layout_height="30dp"
        android:elevation="4dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_40dp"
        android:scaleType="fitXY"
        android:src="@drawable/conrol_arrow"
        android:layout_gravity="right"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:layout_marginEnd="@dimen/_35dp"
        android:layout_gravity="right"
        android:id="@+id/view"
        android:layout_marginTop="-19dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/setting_card"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5dp"
            app:cardElevation="@dimen/_5dp"
            app:cardCornerRadius="@dimen/_5dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="-10dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="@dimen/_30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:drawableStart="@drawable/bus_trx"
                    android:drawablePadding="@dimen/_10"
                    android:layout_marginTop="@dimen/_30dp"
                    android:textColor="@color/keypad_text_clr"
                    android:textSize="@dimen/_13_3sp"
                    style="@style/medium_text_style"
                    android:text="Transaction log"
                    android:layout_marginEnd="@dimen/_35dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:drawableStart="@drawable/bus_cancel"
                    android:drawablePadding="@dimen/_10"
                    android:layout_marginTop="@dimen/_30dp"
                    android:textColor="@color/keypad_text_clr"
                    android:textSize="@dimen/_13_3sp"
                    style="@style/medium_text_style"
                    android:text="Cancel ticket"
                    android:layout_marginEnd="@dimen/_35dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>