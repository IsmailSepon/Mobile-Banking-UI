<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/advanceSearch"
    android:visibility="gone"
    android:layout_marginBottom="16dp"
    tools:visibility="visible"
    >

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
            android:text="@string/journey_type"
            android:textColor="#00203f"
        android:textStyle="bold"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvLevelReturnType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/return_type"
            android:textColor="#00203f"
        android:textStyle="bold"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/viewLineRetrun" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/journey_time"
            android:textColor="#00203f"
        android:textStyle="bold"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/radioGroupJounryType" />

    <TextView
        android:id="@+id/tvLevelRetrunTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/return_time"
            android:textColor="#00203f"
        android:textStyle="bold"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/radioGroupRetrun" />

    <RadioGroup
        android:id="@+id/radioGroupJounryType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3"
        fancy:layout_constraintEnd_toEndOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/textView61">

        <RadioButton
            android:id="@+id/radioBtmAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/ic_all_seleted_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="All"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioBtmAC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_ac_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="AC"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioBtmNonAC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_non_ac_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="Non AC"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGroupRetrun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3"
        fancy:layout_constraintEnd_toEndOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/tvLevelReturnType">

        <RadioButton
            android:id="@+id/radioBtmAllRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/ic_all_seleted_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="All"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioBtmACRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_ac_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="AC"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioBtmNonACRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_non_ac_drawable"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:text="Non AC"
            android:textAlignment="center"
            android:textColor="@drawable/bus_radio_button_text_color" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupJounyType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:checked="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4"
        fancy:layout_constraintBottom_toTopOf="@+id/viewLineRetrun"
        fancy:layout_constraintEnd_toEndOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/textView62">

        <RadioButton
            android:id="@+id/radioJourneyTimeAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Any"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioJourneyTimeAllMorning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Morning"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioJourneyTimeAllEvening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Evening"
            android:textColor="@drawable/bus_radio_button_text_color" />


        <RadioButton
            android:id="@+id/radioJourneyTimeAllNight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Night"
            android:textColor="@drawable/bus_radio_button_text_color" />

    </RadioGroup>

    <View
        android:id="@+id/viewLineRetrun"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#31476a"
        fancy:layout_constraintEnd_toEndOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/radioGroupJounyType" />

    <RadioGroup
        android:id="@+id/radioGroupRetunTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:checked="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4"
        fancy:layout_constraintBottom_toBottomOf="parent"
        fancy:layout_constraintEnd_toEndOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintTop_toBottomOf="@+id/tvLevelRetrunTime">

        <RadioButton
            android:id="@+id/radioJourneyTimeAllRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Any"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioJourneyTimeAllMorningRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Morning"
            android:textColor="@drawable/bus_radio_button_text_color" />

        <RadioButton
            android:id="@+id/radioJourneyTimeAllEveningRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Evening"
            android:textColor="@drawable/bus_radio_button_text_color" />


        <RadioButton
            android:id="@+id/radioJourneyTimeAllNightRetrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableStart="@drawable/ic_time"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:text="Night"
            android:textColor="@drawable/bus_radio_button_text_color" />

    </RadioGroup>

    <!--    lsakjdfkl-->


</androidx.constraintlayout.widget.ConstraintLayout>