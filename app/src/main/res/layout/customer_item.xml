<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/profile_txt"
        style="@style/medium_text_style"
        android:layout_width="@dimen/_34dp"
        android:layout_height="@dimen/_34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/profile_txt_clr"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_12sp"
        style="@style/text_style"
        android:id="@+id/issue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/requested_via_payment_link"
        app:layout_constraintStart_toEndOf="@+id/profile_txt"
        app:layout_constraintTop_toTopOf="@+id/profile_txt" />

    <TextView
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_10sp"
        style="@style/text_style"
        android:id="@+id/link_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid Wed, 10 June"
        app:layout_constraintStart_toStartOf="@+id/issue_name"
        app:layout_constraintTop_toBottomOf="@+id/issue_name" />

</androidx.constraintlayout.widget.ConstraintLayout>