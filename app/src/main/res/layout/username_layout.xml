<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/hader_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_40dp"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView288"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cross_btn"
            tools:ignore="ContentDescription" />

        <TextView
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_16_7sp"
            style="@style/medium_text_style"
            android:id="@+id/textView679"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@string/paywell_username"
            app:layout_constraintBottom_toBottomOf="@+id/imageView288"
            app:layout_constraintStart_toEndOf="@+id/imageView288"
            app:layout_constraintTop_toTopOf="@+id/imageView288" />

        <TextView
            android:id="@+id/textView681"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Anisul Islam"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_16_7sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView289"
            app:layout_constraintStart_toStartOf="@+id/imageView289"
            app:layout_constraintTop_toBottomOf="@+id/imageView289" />

        <ImageView
            android:id="@+id/imageView289"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView679"
            app:srcCompat="@drawable/contact_username"
            tools:ignore="ContentDescription" />

        <TextView
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            style="@style/text_style"
            android:id="@+id/textView684"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@anisul659"
            app:layout_constraintEnd_toEndOf="@+id/textView681"
            app:layout_constraintStart_toStartOf="@+id/textView681"
            app:layout_constraintTop_toBottomOf="@+id/textView681" />

        <TextView
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_14sp"
            style="@style/text_style"
            android:id="@+id/textView685"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/get_paid_without_revealing_your_mobile_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView684" />

        <TextView
            android:id="@+id/textView686"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableTop="@drawable/share_orng"
            android:drawablePadding="@dimen/_10dp"
            android:text="@string/share"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView685" />

        <TextView
            android:id="@+id/edit_txt"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableTop="@drawable/rename_pink"
            android:drawablePadding="@dimen/_10dp"
            android:text="@string/edit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView685" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>