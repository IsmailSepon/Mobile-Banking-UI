<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/splash_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_17sp"
            style="@style/medium_text_style"
            android:id="@+id/textView532"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="Payment request from Anisul Islam"
            app:layout_constraintStart_toStartOf="@+id/imageView219"
            app:layout_constraintTop_toBottomOf="@+id/imageView219" />

        <TextView
            android:textColor="@color/recyclerview_title"
            android:textSize="@dimen/_12sp"
            style="@style/text_style"
            android:id="@+id/textView533"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="@string/payment_for"
            app:layout_constraintStart_toStartOf="@+id/textView532"
            app:layout_constraintTop_toBottomOf="@+id/textView532" />

        <TextView
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            style="@style/text_style"
            android:id="@+id/textView534"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/mango_supply"
            app:layout_constraintStart_toStartOf="@+id/textView533"
            app:layout_constraintTop_toBottomOf="@+id/textView533" />

        <TextView
            android:textColor="@color/recyclerview_title"
            android:textSize="@dimen/_12sp"
            style="@style/text_style"
            android:id="@+id/textView535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/amount_payable"
            app:layout_constraintStart_toStartOf="@+id/textView534"
            app:layout_constraintTop_toBottomOf="@+id/textView534" />

        <TextView
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_27_3sp"
            style="@style/text_style"
            android:id="@+id/textView536"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="৳500.00"
            app:layout_constraintStart_toStartOf="@+id/textView535"
            app:layout_constraintTop_toBottomOf="@+id/textView535" />

        <TextView
            android:textColor="@color/recyclerview_title"
            android:textSize="@dimen/_12sp"
            style="@style/text_style"
            android:id="@+id/textView537"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/select_a_payment_type"
            app:layout_constraintStart_toStartOf="@+id/textView536"
            app:layout_constraintTop_toBottomOf="@+id/textView536" />


        <RadioGroup
            android:id="@+id/transfertype_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView537"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/radiomyselt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:checked="true"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/payment_in_full"
                android:textColor="@drawable/text_radio_selector"
                android:textSize="@dimen/_15sp"
                android:theme="@style/RadioButtonStyle" />

            <RadioButton
                android:id="@+id/radioanother_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/make_payment_in_parts"
                android:textColor="@drawable/text_radio_selector"
                android:textSize="@dimen/_15sp"
                android:theme="@style/RadioButtonStyle" />


        </RadioGroup>


        <EditText
            android:id="@+id/legal_first_name_et"
            style="@style/edittext_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/enter_amount"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:paddingTop="@dimen/_15dp"
            app:layout_constraintEnd_toEndOf="@+id/transfertype_radiogroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfertype_radiogroup"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/textView538"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="৳200.00"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toStartOf="@+id/textView537"
            app:layout_constraintTop_toBottomOf="@+id/legal_first_name_et" />

        <TextView
            android:id="@+id/textView539"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="৳300.00"
            style="@style/medium_text_style"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toStartOf="@+id/textView538"
            app:layout_constraintTop_toBottomOf="@+id/textView538" />

        <ImageView
            android:id="@+id/imageView220"
            android:layout_width="@dimen/_24dp"
            android:layout_height="3dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="16dp"
            android:background="@color/text_link_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView539" />

        <TextView
            android:textColor="@color/text_link_clr"
            android:textSize="@dimen/_14sp"
            style="@style/text_style"
            android:id="@+id/show_payment_history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/show_payment_history"
            app:layout_constraintStart_toStartOf="@+id/textView539"
            app:layout_constraintTop_toBottomOf="@+id/imageView220" />


        <Button
            android:id="@+id/pay_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_hight"
            android:layout_marginTop="52dp"
            android:background="@drawable/round_btn_visable"
            android:elevation="@dimen/evelation_five"
            android:text="@string/pay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_payment_history_txt"
            tools:targetApi="lollipop" />

        <TextView
            style="@style/medium_text_style"
            android:textColor="@color/recyclerview_title"
            android:textSize="@dimen/_14sp"
            android:id="@+id/textView547"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" due"
            app:layout_constraintBottom_toBottomOf="@+id/textView538"
            app:layout_constraintStart_toEndOf="@+id/textView538"
            app:layout_constraintTop_toTopOf="@+id/textView538" />

        <TextView
            style="@style/medium_text_style"
            android:textColor="@color/recyclerview_title"
            android:textSize="@dimen/_14sp"
            android:id="@+id/textView548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" paid"
            app:layout_constraintBottom_toBottomOf="@+id/textView539"
            app:layout_constraintStart_toEndOf="@+id/textView539"
            app:layout_constraintTop_toTopOf="@+id/textView539" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>