<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/cross_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23dp"
        android:layout_marginTop="@dimen/_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewEPD41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87.3dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="5.7sp"
        android:text="What’s your primary email?"
        android:textColor="@color/keypad_text_clr"
        android:textSize="18.3sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEPD42"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.3dp"
        android:layout_marginStart="52.7dp"
        android:layout_marginEnd="52.3dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6.2sp"
        android:textAlignment="center"
        android:text="We’ll only use it to let you know about important change"
        android:textColor="@color/recyclerview_title"
        android:textSize="@dimen/_15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEPD41" />

    <TextView
        android:id="@+id/textViewEPD43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89.3dp"
        android:layout_marginStart="32.3dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6.2sp"
        android:text="Enter new email"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_13_3sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEPD42" />

    <EditText
        android:id="@+id/editTextEPD41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_32dp"
        android:layout_marginBottom="@dimen/_60dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/keypad_text_clr"
        android:textSize="16.7sp"
        android:textStyle="normal"
        android:background="@drawable/common_et_bg"
        android:text="anisul.islam@gmail.com"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEPD43" />

    <Button
        android:id="@+id/primary_email_cnt_btn"
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginTop="@dimen/_60dp"
        android:background="@drawable/round_btn_visable"
        android:fontFamily="sans-serif-medium"
        android:text="@string/_continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintVertical_bias="0.8"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEPD41"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>