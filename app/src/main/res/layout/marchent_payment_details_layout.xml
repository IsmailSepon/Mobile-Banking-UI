<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/req_link_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/textView188"
            android:lineSpacingExtra="3dp"
            style="@style/text_style"
            android:layout_width="@dimen/_250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/we_ll_need_your_payment_details_to_send_your_money_to_anisul_islam_s_paywell_account_instantly"
            android:textColor="@color/recyclerview_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView214" />

        <TextView
            android:lineSpacingExtra="3dp"
            android:id="@+id/textView214"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18dp"
            android:text="@string/please_enter_your_payment_ndetails_maruf_hasan"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView108" />

        <ImageView
            android:id="@+id/imageView108"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/splash_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView215"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp"
            android:layout_marginTop="@dimen/_22dp"
            android:text="@string/paying_amount"
            android:textSize="@dimen/_12sp"
            style="@style/text_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView188" />

        <TextView
            android:id="@+id/textView216"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:text="à§³150"
            style="@style/medium_text_style"
            android:textColor="@color/text_link_clr"
            android:textSize="@dimen/_20sp"
            app:layout_constraintStart_toStartOf="@+id/textView215"
            app:layout_constraintTop_toBottomOf="@+id/textView215" />

        <TextView
            android:id="@+id/textView217"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/name"
            android:textSize="@dimen/_12sp"
            app:layout_constraintStart_toStartOf="@+id/textView216"
            app:layout_constraintTop_toBottomOf="@+id/textView216"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/editTextTextPersonName6"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_46dp"
            android:ems="15"
            android:inputType="textPersonName"
            android:text="Maruf Hasan"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView217"
            app:layout_constraintTop_toBottomOf="@+id/textView217"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView218"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:text="@string/card_number"
            android:textSize="@dimen/_10sp"
            style="@style/text_style"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName6"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6" />

        <EditText
            android:id="@+id/editTextTextPersonName10"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="123465465465465"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView218"
            app:layout_constraintTop_toBottomOf="@+id/textView218" />

        <TextView
            android:id="@+id/textView219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:text="@string/email"
            style="@style/text_style"
            android:textSize="@dimen/_12sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName10"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName10" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="46dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView219"
            app:layout_constraintTop_toBottomOf="@+id/textView219" />

        <TextView
            android:id="@+id/textView220"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:text="@string/mobile_number"
            style="@style/text_style"
            android:textSize="@dimen/_10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

        <EditText
            android:id="@+id/editTextNumberPassword"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="46dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView220"
            app:layout_constraintTop_toBottomOf="@+id/textView220" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cvv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:hintTextAppearance="@style/TextLabeltwo"
            app:layout_constraintStart_toStartOf="@+id/editTextNumberPassword"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword">


            <EditText
                android:id="@+id/cvv_et"
                style="@style/edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:textSize="@dimen/_12sp"
                android:hint="@string/cvv"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:paddingTop="@dimen/_15dp"
                tools:ignore="TextFields" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/personal_details_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="78dp"
            app:hintTextAppearance="@style/TextLabeltwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberPassword">


            <EditText
                android:id="@+id/legal_first_name_et"
                style="@style/edittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:textSize="@dimen/_12sp"
                android:hint="@string/date_of_expiry"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:paddingTop="@dimen/_15dp"
                tools:ignore="TextFields" />

        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/enter_details_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_hight"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_btn_visable"
            android:elevation="@dimen/evelation_five"
            android:text="@string/continue_txt"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            tools:targetApi="lollipop" />


        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="20dp"
            android:text="@string/remember_this_card"
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_12sp"
            android:paddingStart="@dimen/_10dp"
            android:button="@drawable/checkbox_ash_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvv_input" />

        <ImageView
            android:id="@+id/imageView252"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView188"
            app:layout_constraintEnd_toEndOf="@+id/textView188"
            app:srcCompat="@drawable/fly_money" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>