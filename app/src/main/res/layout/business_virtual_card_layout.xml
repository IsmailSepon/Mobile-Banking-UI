<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/text_link_clr"
        android:textSize="@dimen/_12sp"
        style="@style/text_style"
        android:id="@+id/textView444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_12sp"
        style="@style/text_style"
        android:id="@+id/textView445"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/cards"
        app:layout_constraintBottom_toBottomOf="@+id/textView444"
        app:layout_constraintStart_toEndOf="@+id/textView444"
        app:layout_constraintTop_toTopOf="@+id/textView444" />

    <ImageView
        android:id="@+id/imageView179"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView447"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView447"
        app:srcCompat="@drawable/search_commn_clr" />

    <TextView
        android:drawableStart="@drawable/add_ic"
        android:drawablePadding="@dimen/_10dp"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_12sp"
        style="@style/text_style"
        android:id="@+id/textView447"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/get_a_virtual_card"
        app:layout_constraintEnd_toStartOf="@+id/imageView179"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:paddingBottom="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView447">


        <ImageView
            android:id="@+id/imageView181"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/textView448"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Google ads"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView181"
            app:layout_constraintTop_toTopOf="@+id/imageView181" />

        <TextView
            android:id="@+id/textView449"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:drawableStart="@drawable/visa_small_ic"
            android:drawablePadding="@dimen/_5dp"
            android:text="..6012"
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toStartOf="@+id/textView448"
            app:layout_constraintTop_toBottomOf="@+id/textView448" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_one"
            android:layout_marginTop="25dp"
            android:background="@color/common_clr"
            app:layout_constraintTop_toBottomOf="@+id/textView449" />

        <EditText
            android:id="@+id/editTextNumber"
            style="@style/edittext_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:ems="4"
            android:hint="৳0 spent"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView449"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout31">


        <ImageView
            android:id="@+id/imageView181"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/textView448"
            tools:ignore="DuplicateIds"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Facebook ads"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView181"
            app:layout_constraintTop_toTopOf="@+id/imageView181" />

        <TextView
            android:id="@+id/textView449"
            tools:ignore="DuplicateIds"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:drawableStart="@drawable/visa_small_ic"
            android:drawablePadding="@dimen/_5dp"
            android:text="..6012"
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toStartOf="@+id/textView448"
            app:layout_constraintTop_toBottomOf="@+id/textView448" />


<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/half_one"-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:background="@color/slim_divider_bg"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/textView449" />-->

        <EditText
            android:id="@+id/editTextNumber"
            style="@style/edittext_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:ems="4"
            android:hint="৳0 spent"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView449"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />
    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>