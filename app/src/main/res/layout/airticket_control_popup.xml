<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/transparent"
    android:orientation="vertical"
    android:id="@+id/setting_liner"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/setting_card"
        android:layout_width="@dimen/_200dp"
        android:padding="@dimen/_5dp"
        app:cardElevation="@dimen/_5dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Issue ticket"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Booking cancellation"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Ticket void"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Ticket refund"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Re-issue ticket"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Docs/Info update"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_info_gray"
                android:drawablePadding="@dimen/_10"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13_3sp"
                style="@style/medium_text_style"
                android:text="Docs/Booking log"
                android:layout_marginEnd="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>