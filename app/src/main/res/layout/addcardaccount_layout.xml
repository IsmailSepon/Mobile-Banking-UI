<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Add card account details"
                android:textColor="@color/keypad_text_clr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView17"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Beneficiary first name"
                        android:textColor="@color/common_clr"
                        style="@style/text_style"
                        app:layout_constraintBottom_toTopOf="@+id/date_of_birth"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/beneficiary_first_name"
                        style="@style/edittext_style"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:hint="@string/beneficiary_first_name"
                        android:inputType="textPersonName"
                        android:text="Anisul"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Beneficiary last name"
                        android:textColor="@color/common_clr"
                        style="@style/text_style"
                        app:layout_constraintBottom_toTopOf="@+id/date_of_birth"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/beneficiary_last_name"
                        style="@style/edittext_style"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:hint="@string/beneficiary_last_name"
                        android:inputType="textPersonName"
                        android:text="Islam"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>

                <EditText

                    style="@style/edittext_style"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Card number"
                    android:inputType="textPersonName"
                    tools:ignore="MissingConstraints" />

                <Spinner
                    android:layout_marginTop="33dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:background="@drawable/spinner_bg"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/common_clr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/arrowspinner"
                    tools:ignore="ContentDescription" />


                <EditText

                    style="@style/edittext_style"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Mobile number (optional)"
                    android:inputType="textPersonName"
                    tools:ignore="MissingConstraints" />

                <EditText

                    style="@style/edittext_style"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="2dp"
                    android:hint="Email address (to send a transfer confirmation)"
                    android:inputType="textPersonName"
                    tools:ignore="MissingConstraints" />


                <Button
                    android:id="@+id/address_btn"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_btn_visable"
                    android:elevation="5dp"
                    android:text="@string/continue_txt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="80dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>