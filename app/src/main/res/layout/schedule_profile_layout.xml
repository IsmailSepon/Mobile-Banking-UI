<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/active_back_btn"
            android:layout_width="@dimen/_22dp"
            android:layout_height="@dimen/_12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_24dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/textView73"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/active"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512" />


        <ImageView
            android:id="@+id/imageView60"
            android:layout_width="@dimen/_20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/beneficery_info"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView118"
        style="@style/text_style"
        android:layout_width="@dimen/_200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:gravity="center"
        android:text="@string/your_next_transfer_will_occur_on_01_april"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout12" />

    <ImageView
        android:id="@+id/imageView63"
        android:layout_width="@dimen/_83dp"
        android:layout_height="@dimen/_83dp"
        android:layout_marginTop="@dimen/_32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView118"
        app:srcCompat="@drawable/person"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView119"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="-৳1500"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView63" />

    <TextView
        android:id="@+id/textView120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:text="To Mominul Islam"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView119" />

    <TextView
        android:id="@+id/schedule_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32dp"
        android:text="@string/add_note"
        android:textColor="@color/common_clr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView120" />


    <HorizontalScrollView
        android:layout_marginTop="@dimen/_45dp"
        android:id="@+id/hsv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_add_note"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profile_adjust"
                android:layout_width="@dimen/_70dp"
                android:layout_marginStart="@dimen/_35dp"
                android:layout_marginEnd="@dimen/_45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_33dp"
                    android:layout_height="@dimen/_33dp"
                    app:srcCompat="@drawable/adjust_orange"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <TextView
                    android:layout_marginTop="@dimen/eight_dp"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/text_style"
                    android:textSize="@dimen/_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adjust" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_rename"
                android:layout_width="@dimen/_70dp"
                android:layout_marginEnd="@dimen/_45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_33dp"
                    android:layout_height="@dimen/_33dp"
                    app:srcCompat="@drawable/rename_orange"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <TextView
                    android:layout_marginTop="@dimen/eight_dp"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/text_style"
                    android:textSize="@dimen/_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rename" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deactive"
                android:layout_width="@dimen/_70dp"
                android:layout_marginRight="@dimen/_45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <ImageView
                    android:layout_width="@dimen/_33dp"
                    android:layout_height="@dimen/_33dp"
                    app:srcCompat="@drawable/switcher"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <TextView
                    android:layout_marginTop="@dimen/eight_dp"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/text_style"
                    android:textSize="@dimen/_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deactivate" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sc_profile_delete"
                android:layout_width="@dimen/_70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_33dp"
                    android:layout_height="@dimen/_33dp"
                    app:srcCompat="@drawable/delate_orange"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <TextView
                    android:layout_marginTop="@dimen/eight_dp"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/text_style"
                    android:textSize="@dimen/_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@color/divider_bg"
        app:layout_constraintTop_toBottomOf="@+id/hsv"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView121"
        style="@style/medium_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32dp"
        android:layout_marginTop="@dimen/_32dp"
        android:text="Mominul Islam"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/fifteendp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView

        android:id="@+id/textView122"
        style="@style/medium_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24dp"
        android:text="-৳1500"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/fifteendp"
        app:layout_constraintBottom_toBottomOf="@+id/textView121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView121" />


    <TextView
        android:id="@+id/textView123"
        style="@style/medium_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32dp"
        android:layout_marginTop="@dimen/_32dp"
        android:text="@string/transfer_from"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/fifteendp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView122" />

    <TextView

        android:id="@+id/textView125"
        style="@style/medium_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24dp"
        android:text="xyz account"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/fifteendp"
        app:layout_constraintBottom_toBottomOf="@+id/textView123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView123" />


</androidx.constraintlayout.widget.ConstraintLayout>