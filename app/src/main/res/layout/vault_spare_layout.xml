<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView210"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vault_spare"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:id="@+id/linearLayout32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView210">


        <TextView
            android:id="@+id/textView506"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round up your spare change"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10dp"
            android:src="@drawable/fly_money" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView507"
        style="@style/text_style"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="40dp"
        android:gravity="left"
        android:text="Weâ€™ll automatically round up every transaction you make and store your spare change into your personalised savings Vault."
        android:textAlignment="center"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout32"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/spare_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:padding="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView507">


        <ImageView
            android:id="@+id/imageView300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spare" />

        <TextView
            android:id="@+id/textView754"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Spare change"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView300"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView755"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:gravity="left"
            android:text="@string/you_will_save_approximately_300_30_per_month"
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toStartOf="@+id/vault_spare_switch"
            app:layout_constraintStart_toStartOf="@+id/textView754"
            app:layout_constraintTop_toBottomOf="@+id/textView754" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/vault_spare_switch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_17dp"
            android:layout_marginEnd="32dp"
            android:checked="false"
            android:theme="@style/switcherTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView754" />


    </androidx.constraintlayout.widget.ConstraintLayout>




    <Button
        android:id="@+id/vault_spare_btn"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_hight"
        android:elevation="@dimen/evelation_five"
        android:background="@drawable/round_btn_visable"
        android:text="@string/create_vault"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        tools:targetApi="lollipop" />

    <TextView
        style="@style/text_style"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_13_3sp"
        android:id="@+id/textView768"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/spre_change_accelerator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout65" />


    <RadioGroup
        android:layout_marginTop="@dimen/_18dp"
        android:id="@+id/vault_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView768"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x1"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_marginStart="@dimen/_13dp"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x2"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_marginStart="@dimen/_13dp"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x3"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />





        <RadioButton
            android:id="@+id/radio4"
            android:layout_marginStart="@dimen/_13dp"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x4"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />

        <RadioButton
            android:id="@+id/radio5"
            android:layout_marginStart="@dimen/_13dp"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x5"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />

        <RadioButton
            android:id="@+id/radio6"
            android:layout_marginStart="@dimen/_13dp"
            android:layout_width="@dimen/_38dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5dp"
            android:button="@color/transparent"
            android:background="@drawable/vault_radio_bg"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:text="x10"
            android:textColor="@drawable/radio_color_selector"
            android:textSize="@dimen/_16sp"
            android:theme="@style/RadioButtonStyle" />






    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>