<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        app:cardElevation="@dimen/_8dp"
        android:background="@color/transparent"
        app:cardCornerRadius="@dimen/_13dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                style="@style/medium_text_style"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/recyclerview_title"
                android:id="@+id/textView260"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Get new PayWell card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/virtual_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView260"
                app:srcCompat="@drawable/virtual_card_ic"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/physical_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.72"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView260"
                app:srcCompat="@drawable/physical_card_ic"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/medium_text_style"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView261"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Virtual"
                app:layout_constraintEnd_toEndOf="@+id/virtual_card"
                app:layout_constraintStart_toStartOf="@+id/virtual_card"
                app:layout_constraintTop_toBottomOf="@+id/virtual_card" />

            <TextView
                style="@style/medium_text_style"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView262"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Physical"
                app:layout_constraintEnd_toEndOf="@+id/physical_card"
                app:layout_constraintStart_toStartOf="@+id/physical_card"
                app:layout_constraintTop_toBottomOf="@+id/physical_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>