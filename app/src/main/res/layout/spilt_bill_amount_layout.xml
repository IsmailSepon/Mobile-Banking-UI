<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="scheduleViewmodel"
            type="com.cloudwell.paywell.ui.scheduledTransfer.viewModel.ScheduleTransferViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout15"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView107"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/person"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView208"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Amzad Hossain"
                android:textColor="@color/keypad_text_clr"
                app:layout_constraintBottom_toBottomOf="@+id/imageView107"
                app:layout_constraintStart_toEndOf="@+id/imageView107"
                app:layout_constraintTop_toTopOf="@+id/imageView107" />

            <TextView
                android:id="@+id/textView209"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="150.00"
                android:textColor="@color/keypad_text_clr"
                app:layout_constraintBottom_toBottomOf="@+id/imageView107"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView107" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/spilt_bill_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_32dp"
            android:layout_marginEnd="@dimen/_32dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/spilt_amount_done_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView210"
            app:layout_constraintVertical_bias="0.24000001"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView61"
                style="@style/text_style"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:text="@string/gif"
                android:textSize="@dimen/_13sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="404dp" />

            <ImageView
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_60dp"
                android:layout_marginRight="@dimen/_60dp"
                android:background="@color/common_clr"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView62"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/add_note"
                android:textSize="@dimen/_13sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="404dp" />

        </LinearLayout>

        <Button
            android:id="@+id/spilt_amount_done_btn"
            style="Select amount"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/round_btn_visable"
            android:text="@string/request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89" />

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium_text_style"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_17sp"
            android:text="Total:    300.00"
            app:layout_constraintBottom_toBottomOf="@+id/spilt_bill_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spilt_bill_back" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/spilt_bill_back">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/person"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/name"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/you"
                android:textColor="@color/keypad_text_clr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profilepic"
                app:layout_constraintTop_toTopOf="@+id/profilepic" />

            <TextView
                android:id="@+id/amount"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="150.00"
                android:textColor="@color/keypad_text_clr"
                app:layout_constraintBottom_toBottomOf="@+id/profilepic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profilepic" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/text_style"
            android:textColor="@color/keypad_text_clr"
            android:id="@+id/textView210"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:text="For Daraz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout16" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>