<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="scheduleViewmodel"
            type="com.cloudwell.paywell.consumer.ui.scheduledTransfer.viewModel.ScheduleTransferViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cross_btn"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView67"
            android:layout_width="@dimen/_83dp"
            android:layout_height="@dimen/_83dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView64"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/person"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/p_round"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

        <TextView
            android:id="@+id/date_time_txt"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15dp"
            android:text="1 Apr 2020"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/imageView68"
            app:layout_constraintEnd_toStartOf="@+id/imageView68"
            app:layout_constraintTop_toTopOf="@+id/imageView68" />

        <TextView
            android:id="@+id/textView142"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18dp"
            android:text="Mominul Islam"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView67" />

        <TextView
            android:id="@+id/textView143"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:text="@string/bdt"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_27sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_top_up_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView142"
            app:layout_constraintVertical_bias="0.100000024" />

        <EditText
            android:id="@+id/textView144"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_24dp"
            android:background="@color/transparent"
            android:ems="4"
            android:gravity="right"
            android:text="@string/_500"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_27sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_top_up_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView142"
            app:layout_constraintVertical_bias="0.100000024" />

        <TextView
            android:id="@+id/textView145"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:text="Balance: à§³7500.50"
            android:textColor="@color/common_clr"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView143" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_32dp"
            android:layout_marginEnd="@dimen/_32dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/reg_top_up_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView145"
            app:layout_constraintVertical_bias="0.19"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView61"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:text="@string/gif"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="404dp" />

            <ImageView
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="@color/common_clr"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView62"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:text="@string/add_note"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="404dp" />

        </LinearLayout>

        <Button
            android:id="@+id/reg_top_up_btn"
            style="Select amount"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/round_btn_visable"
            android:text="@string/select_amount"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>