<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/what_s_your_home_address"
        android:textColor="@color/keypad_text_clr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_po_boxes_please"/>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


            <TextView
                android:textSize="10sp"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/common_clr" />

            <Spinner

                android:id="@+id/country_spinner"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:spinnerMode="dropdown" />


            <ImageView
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowspinner"
                tools:ignore="ContentDescription" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Present address *"
            android:textColor="@color/common_clr"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/date_of_birth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.201"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/address_er"
            android:hint="@string/present_address"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_et_bg"
            android:ems="13"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/keypad_text_clr"
            tools:ignore="MissingConstraints" />

    </LinearLayout>




        <EditText
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Permanent_address"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_et_bg"
            android:ems="13"
            android:hint="@string/permanent_address"
            android:inputType="textPersonName"
            android:textColor="@color/keypad_text_clr"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />


        <EditText
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/house_No_et"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_et_bg"
            android:ems="13"
            android:hint="@string/house_holding_no"
            android:inputType="textPersonName"
            android:textColor="@color/keypad_text_clr"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/village_Road_et"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_et_bg"
            android:ems="13"
            android:hint="@string/village_road"
            android:inputType="textPersonName"
            android:textColor="@color/keypad_text_clr"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/postal_code"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_et_bg"
            android:ems="13"
            android:hint="@string/postal_code"
            android:inputType="textPersonName"
            android:textColor="@color/keypad_text_clr"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:textSize="10sp"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:textColor="@color/common_clr" />

            <Spinner

                android:id="@+id/district_spinner"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:spinnerMode="dropdown" />


            <ImageView
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowspinner"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:textSize="10sp"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upozila/Area"
                android:textColor="@color/common_clr" />

            <Spinner

                android:id="@+id/thana_spinner"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:spinnerMode="dropdown" />


            <ImageView
                android:layout_marginBottom="1dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowspinner"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:textSize="10sp"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Town/City"
                android:textColor="@color/common_clr" />

            <Spinner

                android:id="@+id/city_spinner"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:spinnerMode="dropdown" />


            <ImageView
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowspinner"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <Button
        android:id="@+id/address_btn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:background="@drawable/round_btn"
        android:elevation="5dp"
        android:text="@string/continue_txt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"/>


    </LinearLayout>
</ScrollView>