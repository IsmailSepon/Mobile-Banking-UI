<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc00203f"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:background="@drawable/bottomsheet_bg_white"
        android:paddingBottom="@dimen/_22dp">


        <TextView
            android:id="@+id/textView790"
            style="@style/medium_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/passengers"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="16dp"
            android:background="#d7e1ee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView790" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout66"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/view15">


            <TextView
                android:id="@+id/textView791"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:text="@string/adult"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_adult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_passenger" />

            <TextView
                android:id="@+id/adult_passenger"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:text="1"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_16_7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/add_adult"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView346"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/adult_passenger"
                app:layout_constraintEnd_toStartOf="@+id/adult_passenger"
                app:srcCompat="@drawable/minize_passenger" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view156"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="#d7e1ee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout66" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout67"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout66"
            tools:layout_editor_absoluteX="0dp">


            <TextView
                android:id="@+id/child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/child"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_child"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/child"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/child"
                app:srcCompat="@drawable/add_passenger" />

            <TextView
                android:id="@+id/child_passenger"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:text="1"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_16_7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/add_child"
                app:layout_constraintTop_toTopOf="@+id/add_child" />

            <ImageView
                android:id="@+id/remove_child"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/child_passenger"
                app:layout_constraintEnd_toStartOf="@+id/child_passenger"
                app:srcCompat="@drawable/minize_passenger" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view156r"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="#d7e1ee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout67" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout678"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            app:layout_constraintTop_toBottomOf="@+id/view156r"
            tools:layout_editor_absoluteX="0dp">


            <TextView
                android:id="@+id/Infant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/infant"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_Infant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/Infant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Infant"
                app:srcCompat="@drawable/add_passenger" />

            <TextView
                android:id="@+id/Infant_passenger"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:text="1"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_16_7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/add_Infant"
                app:layout_constraintTop_toTopOf="@+id/add_Infant" />

            <ImageView
                android:id="@+id/remove_Infant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/Infant_passenger"
                app:layout_constraintEnd_toStartOf="@+id/Infant_passenger"
                app:srcCompat="@drawable/minize_passenger" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view156o"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="#d7e1ee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout678" />


        <ImageView
            android:id="@+id/imageView347"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/info_passenger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view156o" />

        <TextView
            android:id="@+id/textView793"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Booking instructions for children/intent"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_10sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView347"
            app:layout_constraintStart_toEndOf="@+id/imageView347"
            app:layout_constraintTop_toTopOf="@+id/imageView347" />


    </androidx.constraintlayout.widget.ConstraintLayout>


