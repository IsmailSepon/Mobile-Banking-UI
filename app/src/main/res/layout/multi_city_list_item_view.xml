<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flightNumberTV"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight=".6"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:text="1"
            style="@style/text_style"
            android:textColor="#ffffff"
            android:textSize="10dp"/>


        <TextView
            android:id="@+id/errorTV"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            style="@style/text_style"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/flightCancelIV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/close_green"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/llFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fromTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="@color/common_clr"
                style="@style/text_style"
                android:visibility="invisible"/>

            <TextSwitcher
                android:id="@+id/tsMultiCityTripFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHAKA"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextSwitcher
                android:id="@+id/tsMultiCityTripFromPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shahjalal International"
                android:textSize="10sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivOneWayTripTextSwitcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:contentDescription="@string/app_name"
            android:src="@drawable/from_to"/>

        <LinearLayout
            android:id="@+id/toLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1.3"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toTextTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="To"
                android:textColor="@color/common_clr"
                style="@style/text_style"
                android:visibility="invisible"/>

            <TextSwitcher
                android:id="@+id/tsMultiCityTripTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Dhaka"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextSwitcher
                android:id="@+id/tsMultiCityTripToPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Cox's Bazar airport"
                android:textSize="10sp"/>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_one"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/departViewLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDepart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart"
                android:textSize="@dimen/_12sp"
                style="@style/text_style"
                android:textColor="@color/common_clr"/>

            <TextView
                android:textSize="@dimen/_12sp"
                style="@style/medium_text_style"
                android:textColor="@color/keypad_text_clr"
                android:id="@+id/tvDepartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passengerClassLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_12sp"
                style="@style/text_style"
                android:textColor="@color/common_clr"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/tvClassL"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Class"/>

            <TextView
                android:textSize="@dimen/_12sp"
                style="@style/medium_text_style"
                android:textColor="@color/keypad_text_clr"
                android:id="@+id/airTicketClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Economy"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_one"
        android:background="#c0c0c0"/>
</LinearLayout>