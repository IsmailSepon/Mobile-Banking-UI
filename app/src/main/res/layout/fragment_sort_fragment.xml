<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view16"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#00a89b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sort By"
        android:textColor="#00a89b"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup

        android:id="@+id/readioGrouup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonLowPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Low price"
            android:theme="@style/BusAppTheme"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonHightPrices"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="High price"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonLowDepartureTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Low Departure Time"
            android:theme="@style/BusAppTheme"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonHighDepartureTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="High Departure Time"
            android:theme="@style/BusAppTheme"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonLowAvailableSeat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Low Available Seat"
            android:theme="@style/BusAppTheme"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonHightAvailableSeat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="High Available Seat"
            android:theme="@style/BusAppTheme"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>