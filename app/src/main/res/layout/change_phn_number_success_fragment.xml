<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewEPD51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="217.7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/verified"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewEPD51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.7dp"
        android:fontFamily="@font/roboto_medium"
        android:text="You have been succesfully verified"
        android:textAlignment="center"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/fifteen_sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEPD51" />

    <TextView
        android:id="@+id/textViewEPD52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/_10"
        android:text="You may now change your mobile number"
        android:textAlignment="center"
        android:textColor="@color/recyclerview_title"
        android:textSize="@dimen/_13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEPD51" />

    <Button
        android:id="@+id/email_verify_done_btn"
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/round_btn_visable"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/continue_txt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEPD51"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>