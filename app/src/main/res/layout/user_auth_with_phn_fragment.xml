<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewUAP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_38dp"
        android:layout_marginTop="97.3dp"
        android:layout_marginEnd="@dimen/_38dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="5.2sp"
        android:text="@string/enter_your_phone_number_to_reset_a_passcode"
        android:textAlignment="center"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_16_7sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayoutUAP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonContinueUAP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUAP1"
        app:layout_constraintVertical_bias="0.26"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="@dimen/_75dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_15dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textViewUAP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3dp"
                android:text="@string/country"
                android:textColor="@color/common_clr"
                android:textSize="@dimen/twelve_sp" />

            <Spinner
                android:id="@+id/spinnerUAP1"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13dp"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:background="@color/common_clr"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUAP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textColor="@color/common_clr"
                android:textSize="12sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextUAP1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_26dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/common_et_bg"
                android:ems="13"
                android:hint="@string/enter_your_mobile_number"
                android:inputType="number"
                android:textColorHint="@color/common_clr"
                android:textSize="16sp"
                tools:ignore="TextFields"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonContinueUAP1"
        android:layout_width="@dimen/_250dp"
        android:layout_height="@dimen/fifty_dp"
        android:background="@drawable/round_btn"
        android:text="@string/continue_txt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>