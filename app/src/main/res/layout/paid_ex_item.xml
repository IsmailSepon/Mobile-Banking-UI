<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_dividere"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/date_hader"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="10 June"
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_dividere" />

    <ImageView
        android:id="@+id/imageView227"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_hader"
        app:srcCompat="@drawable/payment_link" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_12sp"
        style="@style/medium_text_style"
        android:id="@+id/textView558"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/requested_via_payment_link"
        app:layout_constraintStart_toEndOf="@+id/imageView227"
        app:layout_constraintTop_toTopOf="@+id/imageView227" />

    <TextView
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_10sp"
        style="@style/text_style"
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid Wed, 10 June"
        app:layout_constraintStart_toStartOf="@+id/textView558"
        app:layout_constraintTop_toBottomOf="@+id/textView558" />

    <TextView
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_8sp"
        style="@style/text_style"
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bill for Mango supply"
        app:layout_constraintStart_toStartOf="@+id/date_txt"
        app:layout_constraintTop_toBottomOf="@+id/date_txt" />

    <TextView
        android:id="@+id/amount"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="600"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView558" />
</androidx.constraintlayout.widget.ConstraintLayout>