    <EditText
        android:id="@+id/editTextUAD1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32.3dp"
        android:layout_marginTop="@dimen/_120"
        android:layout_marginEnd="32.3dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/common_et_bg"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/fifteen_sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewUAD1"
        android:textColorHint="@color/common_clr"
        android:hint="DD/MM/YYYY"/>

    <Button
        android:id="@+id/buttonContinueUAD"
        android:layout_width="@dimen/_250dp"
        android:layout_height="@dimen/fifty_dp"
        android:background="@drawable/round_btn"
        android:text="@string/continue_txt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>