<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="schedulebottomsheetModel"
            type="com.cloudwell.paywell.consumer.ui.scheduledTransfer.viewModel.ScheduleBottomSheetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/schedulebottomsheet_bg"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginTop="@dimen/_55dp"
            android:layout_marginBottom="@dimen/_32dp"
            android:background="@drawable/round_btn_orange"
            android:text="@string/set"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout14"
            app:layout_constraintVertical_bias="0.432"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_marginTop="@dimen/_18dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout13">

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_37dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/p_blue"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView148"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/repeat"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13sp"
                app:layout_constraintStart_toEndOf="@+id/imageView69"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textView149"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every_day"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/eleven_sp"
                app:layout_constraintStart_toStartOf="@+id/textView148"
                app:layout_constraintTop_toBottomOf="@+id/textView148" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView138"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_39dp"
            android:text="@string/what_do_you_want_to_do"
            android:textColor="@color/keypad_text_clr"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView147"
            style="@style/medium_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_39dp"
            android:layout_marginEnd="@dimen/_34dp"
            android:text="@string/btn_clear"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView138">

            <ImageView
                android:id="@+id/imageView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_37dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mini_calender"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView14"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12dp"
                android:text="@string/date"
                android:textColor="@color/keypad_text_clr"
                android:textSize="@dimen/_13sp"
                app:layout_constraintStart_toEndOf="@+id/imageView70"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textView15"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Apr 2020"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/eleven_sp"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>