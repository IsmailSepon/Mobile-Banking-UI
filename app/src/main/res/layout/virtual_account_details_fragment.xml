<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewVAD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross_btn"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewVAD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/your_virtual_account_details"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_16_7sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewVAD1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/imageViewVAD1"
        app:layout_constraintTop_toTopOf="@+id/imageViewVAD1" />

    <TextView
        android:id="@+id/textViewVAD2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21.7dp"
        android:layout_marginTop="23.7dp"
        android:layout_marginEnd="@dimen/_21dp"
        android:fontFamily="sans-serif"
        android:text="@string/virtual_account_details_full"
        android:textColor="@color/recyclerview_title"
        android:textSize="@dimen/_13_3sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVAD1" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewVAD1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_24_7dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/topup_round_bg"
        app:cardCornerRadius="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVAD2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewVAD3"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/beneficery"
                android:textColor="@color/common_clr"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewVAD4"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:text="Anisul Islam"
                android:textColor="@color/text_link_clr"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVAD3" />

            <TextView
                android:id="@+id/textViewVAD5"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/beneficiary_account_number"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVAD4" />

            <TextView
                android:id="@+id/textViewVAD6"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:text="7709 6002 3737"
                android:textColor="@color/text_link_clr"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVAD5" />

            <TextView
                android:id="@+id/textViewVAD7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_40dp"
                android:text="@string/beneficiary_bank_branch"
                android:textColor="@color/recyclerview_title"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVAD6" />

            <TextView
                android:id="@+id/textViewVAD8"
                style="@style/medium_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:text="Standard Chartered Bank, Gulshan"
                android:textColor="@color/text_link_clr"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVAD7" />

            <ImageView
                android:id="@+id/imageViewVAD2"
                android:layout_width="@dimen/_17sp"
                android:layout_height="@dimen/_19dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewVAD3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewVAD3"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/share"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageViewVAD3"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewVAD1"
        app:srcCompat="@drawable/clk" />

    <TextView
        android:id="@+id/textViewVAD9"
        android:layout_width="@dimen/_240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:lineSpacingExtra="2.4sp"
        android:text="@string/npsb_transfers_takes_5_to_10_minutes_to_appear_in_your_paywell_account"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_11_7sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewVAD3"
        app:layout_constraintStart_toEndOf="@+id/imageViewVAD3"
        app:layout_constraintTop_toTopOf="@+id/imageViewVAD3" />

    <ImageView
        android:id="@+id/imageViewVAD4"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_marginTop="@dimen/_53dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewVAD3"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVAD3"
        app:srcCompat="@drawable/clnder"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewVAD10"
        android:layout_width="@dimen/_260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:lineSpacingExtra="2.6sp"
        android:text="@string/beftn_transfers_between_12_am_and_2_pm_usually_appears_next_day_1st_half_transfers_between_2_01_pm_and_11_59_pm_appears_next_day_2nd_half_in_your_paywell_account"
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_11_7sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewVAD4"
        app:layout_constraintStart_toEndOf="@+id/imageViewVAD4"
        app:layout_constraintTop_toTopOf="@+id/imageViewVAD4" />

    <Button
        android:id="@+id/buttonDetailsDoneVAD"
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginTop="@dimen/_32dp"
        android:layout_marginBottom="@dimen/_36dp"
        android:background="@drawable/round_btn_visable"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVAD10"
        app:layout_constraintVertical_bias="0.715" />

</androidx.constraintlayout.widget.ConstraintLayout>