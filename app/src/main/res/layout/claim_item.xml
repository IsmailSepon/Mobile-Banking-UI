<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_20dp"
    android:layout_marginBottom="@dimen/_20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView213"
        android:layout_width="@dimen/_33dp"
        android:layout_height="@dimen/_33dp"
        android:layout_marginStart="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_14sp"
        style="@style/medium_text_style"
        android:id="@+id/claim_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="AK. Bulbul"
        app:layout_constraintStart_toEndOf="@+id/imageView213"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/keypad_text_clr"
        android:textSize="@dimen/_10sp"
        style="@style/text_style"
        android:id="@+id/reporting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporting to Tokee Mesbah"
        app:layout_constraintStart_toStartOf="@+id/claim_name"
        app:layout_constraintTop_toBottomOf="@+id/claim_name" />

    <TextView
        android:textColor="@color/common_clr"
        android:textSize="@dimen/_10sp"
        style="@style/text_style"
        android:id="@+id/accounting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accounting by Saiful Islam"
        app:layout_constraintStart_toStartOf="@+id/reporting_txt"
        app:layout_constraintTop_toBottomOf="@+id/reporting_txt" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>