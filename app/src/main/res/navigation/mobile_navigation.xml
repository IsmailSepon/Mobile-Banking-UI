<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_account">

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.cloudwell.paywell.ui.account.fragment.AccountFragment"
        android:label="Account" />

    <fragment
        android:id="@+id/navigation_budget"
        android:name="com.cloudwell.paywell.ui.notifications.NotificationsFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_dashboard_old" />

    <fragment
        android:id="@+id/navigation_pay"
        android:name="com.cloudwell.paywell.ui.notifications.NotificationsFragment"
        android:label="Pay"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_cards"
        android:name="com.cloudwell.paywell.uiBusiness.cards.fragment.BusinessCardMenuFragment"
        android:label="Cards"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_control"
        android:name="com.cloudwell.paywell.ui.dashboard.DashboardFragment"
        android:label="Control"
        tools:layout="@layout/dashboard_fragment" />
</navigation>
