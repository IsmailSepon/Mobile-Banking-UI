<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cloudwell.paywell.consumer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".appController.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">

        <activity
            android:name=".ui.scheduled_Transfer.SchedulTransferHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.addMoney.AddMoneyHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.beneficiary.BeneficeryHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.sendMoney.SendMoneyHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.nidVerification.IdentyOptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.nidVerification.NIDfrontSecondActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.nidVerification.NIDfrontsideActivity"
            android:parentActivityName=".activity.registation.nidVerification.DocumentSubmitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.nidVerification.DocumentSubmitActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".ui.home.MainHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.PassportVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.RegTopUpSecondActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.RegTopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.AccountCreattionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.EmailVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.registation.RegistationMainActivity"
            android:parentActivityName=".activity.registation.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.login.CustomLoginActivity" />
        <activity android:name=".activity.registation.FingerAuthActivity" />
        <activity android:name=".activity.thirdActivity" />
        <activity
            android:name=".activity.registation.SignupActivity"
            android:isScrollContainer="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>