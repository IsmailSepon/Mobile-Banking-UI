<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cloudwell.paywell">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".appController.AppController"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreen"
        tools:replace="android:allowBackup">
        <activity
            android:name=".ui.registration.nidVerification.ocr.NidInputActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.registration.RegistrationUserOptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.cards.CardHoastActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.spiltBill.fragment.SpiltBillHoastActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.bankTransfer.BankTransferHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.withdrawCash.CashWithdrawHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.requestMoney.RequestMoneyHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.scheduledTransfer.SchedulTransferHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.addMoney.AddMoneyHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.beneficiary.BeneficeryHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.sendMoney.SendMoneyHostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.nidVerification.IdentyOptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.nidVerification.NIDfrontSecondActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.nidVerification.NIDfrontsideActivity"
            android:parentActivityName=".ui.registration.nidVerification.DocumentSubmitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.nidVerification.DocumentSubmitActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".ui.home.MainHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.PassportVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.RegTopUpSecondActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.RegTopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.AccountCreattionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.EmailVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.RegistationMainActivity"
            android:parentActivityName=".ui.registration.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.registration.SignupActivity"
            android:isScrollContainer="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".fcm.AppFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>